// Industry standard for Node.js/TypeScript applications
// Used by: Vercel, Netlify, many startups

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  // Primary key
  id        Int      @id @default(autoincrement())
  
  // Authentication
  email     String   @unique @db.VarChar(255)
  password  String   @db.VarChar(255)  // bcrypt hashed
  
  // Profile
  name      String   @db.VarChar(100)
  company   String?  @default("") @db.VarChar(100)
  avatarUrl String?  @map("avatar_url") @db.VarChar(512)
  avatarUpdatedAt DateTime? @map("avatar_updated_at")
  coverUrl  String?  @map("cover_url") @db.VarChar(512)
  coverUpdatedAt DateTime? @map("cover_updated_at")
  phone     String?  @db.VarChar(20)
  
  // Status
  status    UserStatus @default(ACTIVE)
  
  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  // Storage management (Phase 1.5)
  storageQuota   BigInt  @default(1073741824) @map("storage_quota")
  storageUsed    BigInt  @default(0) @map("storage_used")
  storageBackend String  @default("local") @map("storage_backend")
  storagePath    String? @map("storage_path") @db.VarChar(255)
  
  @@map("users")
  @@index([email])
  @@index([status])
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  PENDING
}

enum StorageBackend {
  LOCAL
  LFS
  S3
  AZURE
}
