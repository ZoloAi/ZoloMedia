# MANIFEST.in - Package Data for zlsp Distribution
# Ensures all necessary non-Python files are included

# Documentation
include README.md
include LICENSE
recursive-include Documentation *.md

# Assets (icons, images)
recursive-include assets *.png *.svg

# Theme system
include themes/zolo_default.yaml
recursive-include themes/generators *.py

# Vim editor integration
recursive-include editors/vim/config *.vim
include editors/vim/*.md

# Example files
recursive-include examples *.zolo

# Test fixtures (optional, for development)
recursive-include tests/e2e/fixtures *.zolo

# Exclude build artifacts
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo

# Exclude test/coverage outputs
prune tests/__pycache__
prune .pytest_cache
prune .mypy_cache
prune .ruff_cache
exclude .coverage
exclude htmlcov
